# サーバー設定
PORT=3001
HOST=localhost

# OpenAI API設定
OPENAI_API_KEY=your_openai_api_key_here

# データベース設定
SQLITE_DB_PATH=data/books.sqlite
EMBEDDING_CACHE_DB_PATH=data/embeddings_cache.sqlite

# Firebase設定
FIREBASE_DATABASE_PATH=books.sqlite
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com
FIREBASE_API_KEY=xxxxxxxxxx
FIREBASE_AUTH_DOMAIN=xxxx-xxxx.firebaseapp.com
FIREBASE_MESSAGING_SENDER_ID=xxxxxxxxxx
FIREBASE_APP_ID=xxxxxxxxxx

# データベース同期設定
DB_AUTO_SYNC=true
DB_SYNC_INTERVAL=86400000
# -> 24時間（ミリ秒）

# 環境設定
NODE_ENV=development

# CORS設定
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3001
